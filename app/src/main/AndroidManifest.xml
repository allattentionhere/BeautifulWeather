<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allattentionhere.beautifulweather">

    <application
        android:name=".SkeletonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.allattentionhere.beautifulweather.screens.weather.WeatherActivity"
            android:label="Main Activity"/>

        <activity android:name="com.allattentionhere.beautifulweather.screens.city.CityActivity"
            android:label="City Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>